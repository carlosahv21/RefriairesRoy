<section class="py-24 px-6 mx-auto max-w-7xl" id="servicios">
    <div class="text-center mb-16">
        <h2
            class="text-3xl font-extrabold tracking-tight sm:text-4xl text-primary dark:text-white"
        >
            Nuestros Servicios Especializados
        </h2>
        <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
            Soluciones integrales para climatización y refrigeración profesional
        </p>
    </div>
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {
            [
                "Neveras",
                "Aires Acondicionados",
                "Split",
                "Cava Cuarto",
                "Neveras Exhibidoras",
                "Neveras de Carnicería",
                "Neveras de Charcutería",
                "Enfriadores",
                "Pelcos",
                "Congeladores",
            ].map((service) => (
                <div class="service-item opacity-0 flex items-center gap-4 bg-white/5 p-4 rounded-xl border border-white/10 transition-all duration-300 hover:border-accent/50 hover:shadow-[0_0_20px_rgba(0,242,255,0.2)] hover:translate-x-2">
                    <span class="material-symbols-outlined text-cyan-400">
                        check_circle
                    </span>
                    <span class="font-bold uppercase tracking-wider text-white">
                        {service}
                    </span>
                </div>
            ))
        }
    </div>
</section>

<script>
    import { inView, animate, stagger } from "motion";

    inView("#servicios", () => {
        animate(".service-item", { opacity: [0, 1], x: [-20, 0] } as any, {
            delay: stagger(0.1),
            duration: 0.5,
            ease: "easeOut",
        });
    });
</script>
