<section
    class="bg-slate-50 py-32 px-6 overflow-hidden relative"
    id="beneficios"
>
    <div class="mx-auto max-w-7xl relative z-10">
        <div class="text-center max-w-2xl mx-auto mb-20">
            <h2
                class="text-4xl md:text-5xl font-black text-primary uppercase mb-6"
            >
                Expertos en Climatización
            </h2>
            <p class="text-lg text-slate-600 font-medium italic">
                Soluciones profesionales para tu hogar y negocio.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                [
                    {
                        icon: "ac_unit",
                        title: "Instalación Profesional",
                        desc: "Equipos Split y Ventana instalados con los más altos estándares.",
                    },
                    {
                        icon: "security",
                        title: "Garantía Extendida",
                        desc: "Respaldo total en cada reparación y mantenimiento realizado.",
                    },
                    {
                        icon: "build",
                        title: "Servicio Técnico",
                        desc: "Atención especializada para neveras, cavas y sistemas centrales.",
                    },
                ].map((benefit) => (
                    <div class="benefit-card opacity-0 bg-white p-10 rounded-[2.5rem] shadow-[0_20px_50px_rgba(0,0,0,0.05)] border border-slate-100 flex flex-col items-center text-center group hover:translate-y-[-10px] transition-all duration-500">
                        <div class="size-24 rounded-full flex items-center justify-center bg-accent/10 mb-8 border border-accent/20 group-hover:bg-accent group-hover:text-white transition-colors">
                            <span class="material-symbols-outlined text-4xl font-bold text-accent group-hover:text-white">
                                {benefit.icon}
                            </span>
                        </div>
                        <h3 class="text-2xl font-black text-primary mb-4 leading-tight group-hover:text-accent transition-colors">
                            {benefit.title}
                        </h3>
                        <p class="text-slate-500 leading-relaxed font-medium">
                            {benefit.desc}
                        </p>
                        <button class="mt-8 text-accent font-black uppercase text-sm tracking-wider hover:underline">
                            Saber más
                        </button>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<script>
    import { inView, animate, stagger } from "motion";

    inView("#beneficios", () => {
        // @ts-ignore
        animate(
            ".benefit-card",
            { opacity: [0, 1], y: [50, 0] },
            { delay: stagger(0.2), duration: 0.8, easing: "ease-out" },
        );
    });
</script>
